# =============================================================================
# Конфигурация Coding Agents SDLC Pipeline
# =============================================================================
# Скопируйте этот файл в .env и обновите значения

# -----------------------------------------------------------------------------
# API OpenRouter (обязательно)
# -----------------------------------------------------------------------------
# Получить ключ на https://openrouter.ai/
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# -----------------------------------------------------------------------------
# GitHub (обязательно)
# -----------------------------------------------------------------------------
# GitHub Personal Access Token с правами repo, read:org
GITHUB_TOKEN=your_github_token_here

# Репозиторий в формате owner/repo
GITHUB_REPO=owner/repo

# Базовый URL GitHub API (измените только для GitHub Enterprise)
GITHUB_BASE_URL=https://api.github.com

# -----------------------------------------------------------------------------
# Базы данных
# -----------------------------------------------------------------------------
# URL Redis для LangGraph checkpointer и хранения задач
REDIS_URL=redis://redis:6379/0

# URL PostgreSQL (для расширенного хранения, опционально)
POSTGRES_URL=postgresql://user:password@postgres:5432/coding_agents

# -----------------------------------------------------------------------------
# API Server
# -----------------------------------------------------------------------------
# Хост для привязки API сервера
API_HOST=0.0.0.0

# Порт для API сервера
API_PORT=8000

# Режим отладки
DEBUG=true

# -----------------------------------------------------------------------------
# Конфигурация сервера
# -----------------------------------------------------------------------------
# Публичный URL для remote deployments (ngrok, cloud, etc.)
# Оставьте пустым для локального использования
PUBLIC_URL=

# URL сервера, используемый в API ответах
SERVER_URL=http://localhost:8000

# -----------------------------------------------------------------------------
# Настройки клиента (для CLI)
# -----------------------------------------------------------------------------
# URL сервера по умолчанию для CLI (автообнаружение, если не задано)
CODING_AGENT_SERVER=

# Путь к каталогу конфигурации CLI
CONFIG_PATH=~/.coding-agent

# -----------------------------------------------------------------------------
# LangSmith / LangChain Tracing (опционально)
# -----------------------------------------------------------------------------
# Включить трассировку LangSmith для отладки агентов
LANGCHAIN_TRACING_V2=false

# Ключ API LangSmith
LANGCHAIN_API_KEY=

# Название проекта в LangSmith
LANGCHAIN_PROJECT=coding-agents

# -----------------------------------------------------------------------------
# Настройки агента
# -----------------------------------------------------------------------------
# Максимальное количество итераций для цикла обратной связи
MAX_ITERATIONS=5

# Тайм-аут выполнения агента в секундах
AGENT_TIMEOUT=120

# Включить проверки качества кода (линтинг, форматирование)
CODE_QUALITY_CHECKS=true

# Модель LLM по умолчанию
# Доступные варианты: gpt-4o-mini, qwen-2.5-coder, deepseek-coder
DEFAULT_MODEL=gpt-4o-mini
